<h1 class="page-title text-xs-center">Edit movie</h1>
<div class="main-admin main-center">
    <form class="form-horizontal" method="post" action="/#edit-movie">
        <input type="hidden" name="id" value="{{id}}" />

        <div class="form-group">
            <label for="title" class="cols-sm-2 control-label">Movie title</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{title}}" type="text" required class="form-control" name="title" id="title"  placeholder="Enter movie title"/>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="category" class="cols-sm-2 control-label">Category</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{category}}" type="text" required class="form-control" name="category" id="category"  placeholder="Enter category"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="quantity" class="cols-sm-2 control-label">Quantity</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{quantity}}" type="number" required class="form-control" name="quantity" id="quantity"  placeholder="Enter quantity"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="imgUrl" class="cols-sm-2 control-label">Image url</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{imgUrl}}" type="url" required class="form-control" name="imgUrl" id="imgUrl"  placeholder="Enter image url"/>
                </div>
            </div>
        </div>
                <div class="form-group">
            <label for="description" class="cols-sm-2 control-label">Description</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{description}}" type="text" required class="form-control" name="description" id="description"  placeholder="Enter description"/>
                </div>
            </div>
        </div>
                <div class="form-group">
            <label for="price" class="cols-sm-2 control-label">Price</label>
            <div class="cols-sm-10">
                <div class="input-group">
                    <span class="input-group-addon"><i class="" aria-hidden="true"></i></span>
                    <input value="{{price}}" type="number" required class="form-control" name="price" id="price" placeholder="Enter price"/>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-red btn-lg btn-block login-button">Edit</button>
        </div>
    </form>
</div>